<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PlaceOrderActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E453AEF6"
        android:id="@+id/cartToolbarplaceord">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Shipping Details"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            >

        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linealLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your shipment details"
            android:textColor="@color/black"
            android:textSize="18dp">

        </TextView>

        <EditText
            android:id="@+id/shipname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextshape"
            android:hint="Name"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#AE636363">

        </EditText>

        <EditText
            android:id="@+id/shipphone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextshape"
            android:hint="Phone no."
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#AE636363">

        </EditText>

        <EditText
            android:id="@+id/shipaddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextshape"
            android:hint="Address"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#AE636363">

        </EditText>

        <EditText
            android:id="@+id/shipcity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextshape"
            android:hint="City Name"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#AE636363">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linealLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Price:"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginTop="100dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            >

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cartpricetotal"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text=""
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            >

        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/confirmorder"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:text="PLACE ORDER"
            android:elevation="15dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:background="#E453AEF6"
            android:layout_marginBottom="30dp"
            >

        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>


</RelativeLayout>
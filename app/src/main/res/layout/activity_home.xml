<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:layout_marginBottom="50dp">





    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/home_layout"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:background="#E453AEF6">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/toolbar"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    android:background="#E453AEF6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Amazon"
                            android:textColor="@color/black"
                            android:textSize="27dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            >

                        </TextView>


                        <ImageView
                            android:layout_width="47dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="215dp"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/homecart"
                            android:src="@drawable/cart">


                        </ImageView>

                    </LinearLayout>


                </androidx.appcompat.widget.Toolbar>



            </LinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:layout_centerInParent="true"
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="150dp">

            </androidx.viewpager.widget.ViewPager>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deals of the day"
                android:layout_marginTop="25dp"
                android:layout_marginStart="17dp"
                android:textSize="23dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black">


            </TextView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:background="@color/white"
                android:backgroundTint="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/white">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/watch1"
                        android:background="@color/white"
                        android:backgroundTint="@color/white">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/watch1">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:id="@+id/oddwatchname"
                                android:textColor="@color/black"
                                android:text="Sonata Analog\n Watch"
                                android:textSize="13dp">


                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/oddwatchprice"
                                android:textColor="@color/black"
                                android:text="₹745"
                                android:textSize="23dp">

                            </TextView>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/watch2"
                        android:background="@color/white"
                        android:backgroundTint="@color/white">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/watch2">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:id="@+id/evenwatchname"
                                android:textColor="@color/black"
                                android:text="Fastrack Ruffles\nAnalog Watch"
                                android:textSize="13dp">


                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/evenwatchprice"
                                android:textColor="@color/black"
                                android:text="₹4,695"
                                android:textSize="23dp">

                            </TextView>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/watch3"
                        android:background="@color/white"
                        android:backgroundTint="@color/white">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/watch3"
                                tools:ignore="ImageContrastCheck">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:id="@+id/oddwatchname"
                                android:textColor="@color/black"
                                android:text="Louis Devin Stainless\nSteel Analog Watch "
                                android:textSize="13dp">


                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/oddwatchprice"
                                android:textColor="@color/black"
                                android:text="₹399"
                                android:textSize="23dp">

                            </TextView>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/watch4"
                        android:background="@color/white"
                        android:backgroundTint="@color/white">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/watch4">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:id="@+id/evenwatchname"
                                android:textColor="@color/black"
                                android:text="MI Smart Watch"
                                android:textSize="13dp">


                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/evenwatchprice"
                                android:textColor="@color/black"
                                android:text="₹599"
                                android:textSize="23dp">

                            </TextView>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="17dp"
                android:text="Top Products"
                android:textSize="23dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black">


            </TextView>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/productslist"
                android:nestedScrollingEnabled="true"
                >


            </ListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewallproducts"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:text="VIEW ALL"
                android:textSize="18dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:gravity="right">


            </TextView>



        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</FrameLayout>